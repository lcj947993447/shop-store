<!-- pages/my/index.wxml -->
<view class="wrapper">
  <view class="userinfo">
    <block wx:if="{{userInfo}}">
      <image class="avatar" src="{{userInfo.avatarUrl}}" />
    </block>
    <block wx:else>
      <image class="avatar" src="cloud://cloud1-0gs0660s7b262176.636c-cloud1-0gs0660s7b262176-1305463227/static/default-avatar.jpg" mode="aspectFill" />
    </block>
    <block wx:if="{{openid}}">
      <view class="userName" wx:if="{{userInfo}}">{{userInfo.nickName}}</view>
      <view class="userName" wx:else bindtap="getUserInfo">获取头像昵称</view>
    </block>
    <view class="userName" wx:else bindtap="getOpenId">登录/注册</view>
  </view>
  <view class="order">
    <view class="title">我的订单</view>
    <view class="order-type"></view>
  </view>
</view>