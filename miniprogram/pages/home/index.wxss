/* pages/home/index.wxss */
.banner{
  width: 100%;
  height: 400rpx;
  margin-bottom: 40rpx;
}
.swiper-item{
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper-image{
  width: 100%;
}

.goods{
  padding: 20rpx 25rpx 40rpx;
  border-top: 10rpx solid #f6f6f6;
}
.goods .title{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}
.goods .list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods .item{
  width: 345rpx;
  margin-bottom: 20rpx;
}
.item .goods-image{
  width: 345rpx;
  height: 345rpx;
  margin-bottom: 10rpx;
}
.item .info .name,.item .info .price{
  height: 64rpx;
  font-size: 24rpx;
  line-height: 32rpx;
}
.item .info .name{
  height: 64rpx;
}
