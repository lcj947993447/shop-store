/* packageShop/pages/goodsDetail/index.wxss */
.edit-title{
  font-size: 28rpx;
}

.edit{
  border-bottom: 2rpx solid #e3e3e3;
  line-height: 80rpx;
  font-size: 28rpx;
}
.image-edit{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.image-item{
  position: relative;
  width: 345rpx;
  height: 345rpx;
  margin-bottom: 16rpx;
  text-align: center;
  overflow: hidden;
}

.image-item .image{
  width: 100%;
}
.image-item .icon{
  position: absolute;
  right: 0;
  top: 0;
  width: 32rpx;
  height: 32rpx;
  font-size: 32rpx;
}
.icon-wrap{
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  font-size: 24rpx;
}
.add-icon{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.status-edit{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.classify-picker{
  display: flex;
  justify-content: space-between;
}
.classify-picker .icon{
  font-size: 24rpx;
}

.edit-input{
  margin-bottom: 20rpx;
}

.placeholder{
  font-size: 28rpx;
}

.button-wrap{
  display: flex;
  justify-content: space-around;
}