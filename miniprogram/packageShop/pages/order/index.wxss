/* packageShop/pages/order/index.wxss */
.wrap{
  padding: 40rpx 0;
}

.tab{
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 70rpx;
  margin-bottom: 20rpx;
  background-color: #f6f6f6;
  font-size: 28rpx;
}
.tab .item{
  height: 68rpx;
  line-height: 68rpx;
  border-bottom: 2rpx solid #f6f6f6;
}
.tab .item.active{
  border-bottom: 2rpx solid #333;
}

.list-none{
  padding: 100rpx 0;
  text-align: center;
}

.list .item{
  margin: 0 30rpx 30rpx;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.list .order-id{
  margin-bottom: 20rpx;
}
.list .image-wrap{
  width: 100%;
  height: 260rpx;
  white-space: nowrap;
}
.list .image-item,.image-item .image{
  display: inline-block;
  width: 260rpx;
  height: 260rpx;
}
.list .content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 62rpx;
  line-height: 60rpx;
}
.list  .btn{
  padding: 0 20rpx;
  margin-left: 20rpx;
  border: 2rpx solid #c6c6c6;
  border-radius: 10rpx;
}
