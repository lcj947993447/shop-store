/* packageShop/pages/images/index.wxss */
.image-list{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.image-item{
  position: relative;
  width: calc(50% - 10rpx);
  margin-bottom: 20rpx;
}
.image-item:nth-child(2n){
  margin-left: 20rpx;
}
.image-item .image{
  width: 100%;
  height: 100%;
}

.image-item .icon-wrap{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  background: rgba(0,0,0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon-wrap .icon{
  font-size: 50rpx;
  color: #fff;
}
