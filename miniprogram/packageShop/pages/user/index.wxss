/* packageShop/pages/user/index.wxss */
.item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.left{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 40rpx;
}
.left .avatar{
  width: 100%;
  height: 100%;
}

.right{
  width: 580rpx;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.right .detail{
  width: 180rpx;
  height: 60rpx;
  border: 2rpx solid #e6e6e6;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
}